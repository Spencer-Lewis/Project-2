<% if @user_id == @comment.user_id %>
<h2><%= @comment.id %></h2>
<h2><%= @comment.content %></h2>
<a href='/comments/<%= @comment.id %>/edit'>Edit This Comment</a><br><br>
<%= link_to "Delete this Comment!", @comment, method: :delete, data: { confirm: 'Are you sure you want to delete it?' } %><br><br>
<a href='/posts'>Home</a>
<% else %>
<h1>This is not your Comment!</h1>
<% end %>
